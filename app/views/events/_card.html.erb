<%= link_to organization_event_path(card.organization.id, card), data: { turbo: false }, class: 'transition-all duration-1000 bg-white hover:bg-blue-500 hover:shadow-xl mt-2 relative z-40 group' do %>

    <div class="py-2 px-9 relative">
        <% if card.tag_list.present? %>
            <div class="absolute top-0 right-2 z-10 mt-3 ml-3">
                <%= render partial: 'events/tag', collection: card.tag_list %>
            </div>
        <% end %>

        <%= image_tag card.image_url %>

        <h3 class="mt-8 text-lg font-semibold text-black group-hover:text-white">
            <%= card.name %>
        </h3>

        <p class="mt-2 text-base text-gray-600 group-hover:text-white">
            <%= card.start_date.strftime('%d.%m.%Y %H:%M') %>
        </p>

        <p class="mt-2 text-base text-gray-600 group-hover:text-white">
            <%= card.organization.name %>
        </p>

        <p class="mt-4 text-base text-gray-600 group-hover:text-white">
            <%= truncate(card.description, length: 120) %>
        </p>
    </div>
<% end %>
