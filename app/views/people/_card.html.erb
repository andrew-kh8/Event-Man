<%= link_to person_path(card), class: "py-4 rounded-xl flex flex-col items-center justify-center text-gray-800 hover:text-blue-600 bg-gray-100" do %>
    <%= image_tag card.avatar_url, class:"w-32 rounded-full" %>

    <h3 class="text-center font-bold text-sm mt-1">
        <%= card.full_name %>
    </h3>
<%end%>
