<div id="<%= dom_id person %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">First name:</strong>
    <%= person.first_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= person.last_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Avatar:</strong>
    <%= person.avatar %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Birthday:</strong>
    <%= person.birthday %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= person.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">City:</strong>
    <%= person.city %>
  </div>
</div>
