<%= turbo_frame_tag "participation" do %>

    <div class="flex flex-col max-w-screen-xl px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8">

        <div class="mr-4 flex items-center bg-slate-400 text-gray-100 px-4 py-2 rounded text-sm space-x-2 transition duration-100">
            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 11.917 9.724 16.5 19 7.5"/>
            </svg>
            <span>Вы записаны</span>
        </div>

        <%= button_to participant_path(participant), method: :delete, class: "flex items-center bg-rose-900 hover:bg-rose-950 text-gray-100 px-4 py-2 rounded text-sm space-x-2 transition duration-100" do%>
            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 17.94 6M18 18 6.06 6"/>
            </svg>
            <span>Отменить участие</span>
        <%end%>

    </div>
<%end%>
